## go
cd /usr/local/src
sudo curl -s -O https://storage.googleapis.com/golang/go1.7.linux-amd64.tar.gz
sudo curl -s -O https://storage.googleapis.com/golang/go1.8.linux-amd64.tar.gz
tar xzvf go1.7.linux-amd64.tar.gz && sudo mv go go1.7
tar xzvf go1.8.linux-amd64.tar.gz && sudo mv go go1.8

cd ..
sudo ln -s src/go1.7 /usr/local/go

cd
mkdir -p src/go-work
export GOPATH=/home/ajohnston/src/go-work
export PATH="${PATH}:/usr/local/go/bin"

